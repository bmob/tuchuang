{
	"name": "A browser action with a popup that upload Image to Flickr.",
	"version": "0.1",
	"manifest_version": 2,
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"offline_enabled": true,
	"sandbox": {
		"pages": ["popup.html"]
	},
	"permissions": [
	"webview",
	"system.display",
	"http://*/*",
	"https://*/*",
	"contextMenus",
	"unlimitedStorage",
	"storage",
	"fileSystem",
	"fileSystem.write",
	"identity"]
}